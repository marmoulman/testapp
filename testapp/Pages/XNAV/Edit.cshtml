@page "{productId:int?}"
@model testapp.Pages.XNAV.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />
    <div class="form-group">
        <label asp-for="Product.Manufacturer"></label>
        <input asp-for="Product.Manufacturer" class="form-control" />
        <span class="text-danger" asp-validation-for="Product.Manufacturer"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Model"></label>
        <input asp-for="Product.Model" class="form-control" />
        <span class="text-danger" asp-validation-for="Product.Model"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <input asp-for="Product.Description" class="form-control" />
        <span class="text-danger" asp-validation-for="Product.Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" class="form-control"/>
        <span class="text-danger" asp-validation-for="Product.Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Url"></label>
        <input asp-for="Product.Url" class="form-control"/>
        <span class="text-danger" asp-validation-for="Product.Url"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>